doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")
    title NNチャット
  nav.navbar.navbar-light.bg-light.justify-between.sticky-top
    a(href="#").navbar-brand NNチャット
    form.form-inline
       p.mr-sm-2 #{user}さんがログイン中です
       a(href="/logout").btn.btn-info.my-2.my-sm-0 ログアウト
  body.container
    div.my-3
    h2 新規投稿
    form(method="post" action="/posts")
      div.form-group
        textarea(name="content" rows="4").form-control
      div.form-group
        button(type="submit").btn.btn-primary 送信

    each post in posts
      - let cardClass = (user === post.postedBy ? 'card my-3 bg-primary text-white' : 'card my-3')
      div(class=`${cardClass}`)
        - let isDeletable = (user === post.postedBy || user === 'admin')
        if isDeletable
          div.card-header
            form(method="post" action="/posts/delete")
              input(type="hidden" name="id" value=post.id)
              button(type="submit").btn.btn-danger.float-right 削除
        div.card-body
          b 投稿者:#{post.postedBy}
          small.float-right #{post.formattedCreatedAt}
          p.card-text!=post.content

    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
    crossorigin="anonymous")
